# Supabase Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Secret (generate a secure random string)
JWT_SECRET=your_jwt_secret_here

# CORS Configuration
# For production, specify exact origins (comma-separated): https://yourapp.com,https://api.yourapp.com
# For development: http://localhost:8081
# WARNING: Using "*" allows all origins (insecure for production)
CORS_ORIGIN=http://localhost:8081

# Supabase Anon Key (for JWT verification in auth middleware)
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# SMS Service Configuration (for MFA)
# Option 1: Twilio (recommended for production)
# Install: npm install twilio
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=+1234567890

# Option 2: AWS SNS (alternative)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1

# Note: In development/sandbox mode, codes are logged to console instead of sending SMS

# Request Security Configuration
MAX_REQUEST_SIZE=1mb  # Maximum request body size (default: 1mb)
REQUEST_TIMEOUT_MS=30000  # Request timeout in milliseconds (default: 30000 = 30 seconds)

# Security Alert Notifications
# Enable/disable notification channels
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SLACK_NOTIFICATIONS=false

# Email Notification Configuration
# Option 1: Standard SMTP
EMAIL_SERVICE=smtp  # or 'sendgrid'
EMAIL_FROM=noreply@trilo.app
EMAIL_TO=security@trilo.app,admin@trilo.app  # Comma-separated list
SMTP_HOST=smtp.sendgrid.net  # or your SMTP host
SMTP_PORT=587
SMTP_USER=apikey  # For SendGrid, use 'apikey'
SMTP_PASSWORD=your_smtp_password_here
SMTP_SECURE=false  # true for port 465, false for 587/25

# Option 2: SendGrid API (alternative to SMTP)
# SENDGRID_API_KEY=your_sendgrid_api_key_here

# Alert Routing Configuration (comma-separated channels: email,slack)
# Channels are sent based on alert severity
ALERT_ROUTING_CRITICAL=email,slack  # Critical alerts: email + slack
ALERT_ROUTING_HIGH=email,slack      # High alerts: email + slack
ALERT_ROUTING_MEDIUM=email          # Medium alerts: email only
ALERT_ROUTING_LOW=email             # Low alerts: email only (or disable by not setting)

